{
  "metadata": {
    "created": "2026-01-27",
    "version": "2.0",
    "description": "Complete rule-based grammar transformation engine for Hindi, Telugu, Tamil",
    "dataset_sources": ["AI4Bharat Samanantar", "IIT Bombay Corpus", "Linguistic Research"]
  },
  "pos_tags": {
    "noun": {"symbol": "N", "description": "Person, place, thing, or idea", "hindi_mark": "संज्ञा", "telugu_mark": "నామపదం", "tamil_mark": "பெயரெச்சம்"},
    "verb": {"symbol": "V", "description": "Action or state of being", "hindi_mark": "क्रिया", "telugu_mark": "క్రియ", "tamil_mark": "வினை"},
    "adjective": {"symbol": "ADJ", "description": "Describes or modifies a noun", "hindi_mark": "विशेषण", "telugu_mark": "విశేషణం", "tamil_mark": "பெயரடை"},
    "adverb": {"symbol": "ADV", "description": "Modifies verb, adjective, or adverb", "hindi_mark": "क्रियाविशेषण", "telugu_mark": "క్రియా విశేషణం", "tamil_mark": "வினையடை"},
    "pronoun": {"symbol": "PRO", "description": "Replaces a noun", "hindi_mark": "सर्वनाम", "telugu_mark": "సర్వనామం", "tamil_mark": "பெயர்களைக்குறிப்பது"},
    "preposition": {"symbol": "PREP", "description": "Shows relationship between words", "hindi_mark": "संबंध शब्द", "telugu_mark": "సంబంధ పదం", "tamil_mark": "உறவுச்சொல்"},
    "conjunction": {"symbol": "CONJ", "description": "Joins words or clauses", "hindi_mark": "संयोजन", "telugu_mark": "సంధానం", "tamil_mark": "இணைப்பு"},
    "interjection": {"symbol": "INT", "description": "Expresses emotion or surprise", "hindi_mark": "विस्मयादिबोधक", "telugu_mark": "ఆశ్చర్యాభిధానం", "tamil_mark": "விலக்கணச்சொல्"},
    "article": {"symbol": "ART", "description": "Definite or indefinite article", "hindi_mark": "N/A", "telugu_mark": "N/A", "tamil_mark": "N/A"},
    "number": {"symbol": "NUM", "description": "Cardinal or ordinal number", "hindi_mark": "संख्या", "telugu_mark": "సంఖ్య", "tamil_mark": "எண்"}
  },
  "word_order_rules": {
    "english": {
      "order": "SVO",
      "pattern": "Subject-Verb-Object",
      "example": "I eat rice",
      "structure": ["subject", "verb", "object"]
    },
    "hindi": {
      "order": "SOV",
      "pattern": "Subject-Object-Verb",
      "example": "मैं चावल खाता हूँ",
      "structure": ["subject", "object", "verb"],
      "transformation": "Move verb to end. Auxiliary merged with main verb."
    },
    "telugu": {
      "order": "SOV",
      "pattern": "Subject-Object-Verb",
      "example": "నేను వెల్లుళ్ళు చేస్తాను",
      "structure": ["subject", "object", "verb"],
      "transformation": "Strict SOV. Verb gets subject/tense suffix."
    },
    "tamil": {
      "order": "SOV",
      "pattern": "Subject-Object-Verb",
      "example": "நான் சாதம் சாப்பிடுகிறேன்",
      "structure": ["subject", "object", "verb"],
      "transformation": "SOV with inflected verbs. Tense in verb suffix."
    }
  },
  "tense_rules": {
    "present_simple": {
      "english_pattern": "verb as-is / verb+s",
      "english_examples": ["I read", "He reads"],
      "hindi_pattern": "verb + ता/ती + हूँ/है/हैं",
      "hindi_examples": ["मैं पढ़ता हूँ", "वह पढ़ता है"],
      "hindi_conjugation": {
        "masculine_singular": "verb + ता हूँ",
        "masculine_plural": "verb + ते हैं",
        "feminine_singular": "verb + ती हूँ",
        "feminine_plural": "verb + ती हैं"
      },
      "telugu_pattern": "verb + ను/ను + present suffix",
      "telugu_examples": ["నేను చదువుతాను", "అతను చదువుతాడు"],
      "tamil_pattern": "verb + ै/ैय्",
      "tamil_examples": ["நான் படிக்கிறேன்", "அவன் படிக்கிறான்"],
      "detection_keywords": ["does", "do", "is", "are"],
      "confidence": 0.94
    },
    "past_simple": {
      "english_pattern": "verb+ed or irregular",
      "english_examples": ["I read", "He went"],
      "hindi_pattern": "verb + ा/ी + था/थी/थे",
      "hindi_examples": ["मैं पढ़ता था", "वह पढ़ती थी"],
      "hindi_conjugation": {
        "masculine_singular": "verb + ा + था",
        "masculine_plural": "verb + े + थे",
        "feminine_singular": "verb + ी + थी",
        "feminine_plural": "verb + ी + थीं"
      },
      "telugu_pattern": "verb + ेन / verb + ेన్",
      "telugu_examples": ["నేను చదువుకున్నాను", "అతను చదువుకున్నాడు"],
      "tamil_pattern": "verb + ै + न्न्",
      "tamil_examples": ["நான் படித்தேன்", "அவன் படித்தான்"],
      "detection_keywords": ["was", "were", "did"],
      "confidence": 0.92
    },
    "future_simple": {
      "english_pattern": "will + verb",
      "english_examples": ["I will read", "He will go"],
      "hindi_pattern": "verb + ूंगा/ूंगी",
      "hindi_examples": ["मैं पढ़ूंगा", "वह पढ़ेगा"],
      "hindi_conjugation": {
        "masculine_singular": "verb + ूंगा",
        "masculine_plural": "verb + ेंगे",
        "feminine_singular": "verb + ूंगी",
        "feminine_plural": "verb + ेंगी"
      },
      "telugu_pattern": "verb + ను + future suffix",
      "telugu_examples": ["నేను చదువుతాను", "అతను చదువుతాడు"],
      "tamil_pattern": "verb + ु्प्",
      "tamil_examples": ["நான் படிக்கவும் வேண்டும்", "அவன் படிக்கவும் வேண்டும்"],
      "detection_keywords": ["will", "shall"],
      "confidence": 0.91
    },
    "present_continuous": {
      "english_pattern": "is/are + verb+ing",
      "english_examples": ["I am reading", "He is going"],
      "hindi_pattern": "verb + रहा/रही + है/हैं",
      "hindi_examples": ["मैं पढ़ रहा हूँ", "वह जा रहा है"],
      "telugu_pattern": "verb + tion + untunnadi",
      "tamil_pattern": "verb + ै + irukkirén",
      "detection_keywords": ["is", "are", "am"],
      "confidence": 0.90
    },
    "present_perfect": {
      "english_pattern": "have/has + verb+ed",
      "english_examples": ["I have read", "He has gone"],
      "hindi_pattern": "verb + ा/ी + है",
      "hindi_examples": ["मैं पढ़ा हूँ", "वह गया है"],
      "telugu_pattern": "verb + ু్న్న + ఉన్నాను",
      "tamil_pattern": "verb + ै + irundén",
      "detection_keywords": ["have", "has"],
      "confidence": 0.89
    }
  },
  "auxiliary_verb_rules": {
    "english_auxiliaries": ["is", "are", "was", "were", "do", "does", "did", "will", "shall", "can", "could", "may", "might", "must", "should", "would", "have", "has", "had"],
    "description": "English auxiliary verbs are merged into main verb or replace tense marker in Indian languages",
    "hindi_handling": {
      "strategy": "Merge with main verb or use as tense marker",
      "example_be": "I am reading → मैं पढ़ रहा हूँ (merge 'am' into reading state)",
      "example_have": "I have read → मैं पढ़ा हूँ (merge 'have' into past tense)"
    },
    "telugu_handling": {
      "strategy": "Merge or omit based on tense",
      "example_be": "I am reading → నేను చదువుతున్నాను (verb conjugation shows present continuous)",
      "example_have": "I have read → నేను చదువారాను (verb shows past perfect)"
    },
    "tamil_handling": {
      "strategy": "Merge with verb in suffix form",
      "example_be": "I am reading → நான் படிக்கிறேன் (suffix ிறேன் includes 'am')",
      "example_have": "I have read → நான் படித்துவிட்டேன் (suffix shows completion)"
    }
  },
  "gender_rules": {
    "hindi": {
      "description": "Hindi nouns and verbs have grammatical gender",
      "masculine_noun_endings": ["ा", "ल", "ण", "त", "क", "य"],
      "feminine_noun_endings": ["ी", "या", "आ", "ा"],
      "neutral_marking": "No specific ending",
      "verb_gender_agreement": {
        "masculine_singular": "verb + ा + suffix",
        "masculine_plural": "verb + े + suffix",
        "feminine_singular": "verb + ी + suffix",
        "feminine_plural": "verb + ी + suffix"
      },
      "adjective_agreement": {
        "masculine": "adj + ा",
        "feminine": "adj + ी"
      },
      "example_masculine": "बड़ा लड़का (big boy)",
      "example_feminine": "बड़ी लड़की (big girl)"
    },
    "telugu": {
      "description": "Telugu gender shown in adjectives and verbs",
      "masculine": "Default form",
      "feminine": "Special suffixes and agreement",
      "agreement_in": ["adjectives", "verbs"],
      "example_masculine": "పెద్ద (big-masculine)",
      "example_feminine": "పెద్ద (big-feminine variant)"
    },
    "tamil": {
      "description": "Tamil marks gender in nouns, verbs, adjectives",
      "masculine": "நன்மை (good-masculine)",
      "feminine": "நன்மையான (good-feminine)",
      "neutral": "நன்றாக (good-neutral/adverbial)"
    }
  },
  "postposition_rules": {
    "description": "Indian languages use postpositions instead of prepositions",
    "english_prepositions": ["in", "on", "at", "to", "from", "by", "with", "for"],
    "hindi_postpositions": {
      "में": "in/at",
      "पर": "on/at",
      "को": "to/dative",
      "से": "from/instrumental",
      "के द्वारा": "by/agent",
      "के साथ": "with/accompaniment",
      "के लिए": "for/purpose"
    },
    "positioning": "Come AFTER noun (post-position) unlike English (pre-position)",
    "example_english": "in the house",
    "example_hindi": "घर में (house in)",
    "example_telugu": "ఇంట్లో (house in)",
    "example_tamil": "வீட்டில் (house in)"
  },
  "pluralization_rules": {
    "hindi": {
      "method": "Context-based, some suffix additions",
      "singular": "एक पेड़ (one tree)",
      "plural": "कई पेड़ (many trees)",
      "suffix_rules": ["ा → े", "ी → ीं"],
      "example": "किताब (book) → किताबें (books)"
    },
    "telugu": {
      "method": "Add plural marker suffix -ులు / -ల",
      "singular": "చెట్టు (one tree)",
      "plural": "చెట్టులు (many trees)",
      "suffix_marker": "-ులు",
      "example": "చెట్టు (tree) → చెట్టులు (trees)"
    },
    "tamil": {
      "method": "Add plural suffix -கள்",
      "singular": "மரம् (one tree)",
      "plural": "மरमुкल् (many trees)",
      "suffix_marker": "-कள्",
      "example": "புத்தகம் (book) → புத்தகங்கள் (books)"
    }
  },
  "case_marking": {
    "hindi": {
      "nominative": "subject without suffix",
      "accusative": "noun + को",
      "instrumental": "noun + से",
      "locative": "noun + में",
      "genitive": "noun + का/की",
      "dative": "noun + को"
    },
    "telugu": {
      "nominative": "base form",
      "accusative": "noun + ను",
      "instrumental": "noun + వలన",
      "locative": "noun + లో",
      "genitive": "noun + కు",
      "examples": ["చెట్టు (tree)", "చెట్టును (tree-accusative)"]
    },
    "tamil": {
      "nominative": "base form",
      "accusative": "noun + ை",
      "instrumental": "noun + ाल",
      "locative": "noun + ил",
      "examples": ["மரம் (tree)", "மரத்தை (tree-accusative)"]
    }
  },
  "aspect_markers": {
    "description": "Aspect shows how action develops (perfective, imperfective, habitual)",
    "hindi_aspects": {
      "perfective": "completed action - verb + ा/ी + है",
      "imperfective": "ongoing action - verb + रहा/रही + है",
      "habitual": "repeated action - verb + ता/ती + है",
      "example_perfective": "मैं पढ़ा हूँ (I have read - completed)",
      "example_imperfective": "मैं पढ़ रहा हूँ (I am reading - ongoing)",
      "example_habitual": "मैं पढ़ता हूँ (I read - regularly)"
    },
    "telugu_aspects": {
      "perfective": "verb + ు్న్న",
      "imperfective": "verb + tion + untunnadi"
    },
    "tamil_aspects": {
      "perfective": "verb + ै + ндуп्पु",
      "habitual": "verb + ै + irukku"
    }
  },
  "mood_markers": {
    "indicative": {
      "description": "Statement of fact",
      "hindi_example": "मैं पढ़ता हूँ",
      "telugu_example": "నేను చదువుతాను",
      "tamil_example": "நான் படிக்கிறேன்"
    },
    "conditional": {
      "description": "Conditional statement (if-then)",
      "hindi_formation": "verb + ता/ती + अगर",
      "hindi_example": "अगर मैं पढ़ता हूँ, तो समझ आएगा",
      "detection": ["if", "would", "should"]
    },
    "imperative": {
      "description": "Command or request",
      "hindi_formation": "bare verb root or verb + ो",
      "hindi_example": "पढ़! (Read!)",
      "telugu_example": "చదువు! (Read!)",
      "tamil_example": "படி! (Read!)"
    },
    "subjunctive": {
      "description": "Wish, possibility, doubt",
      "hindi_formation": "verb + े",
      "hindi_example": "मुझे पढ़ना चाहिए"
    }
  },
  "sentence_analysis": {
    "svo_detection": {
      "description": "Identify Subject, Verb, Object in English sentences",
      "subject_indicators": ["pronoun at start", "proper noun at start", "noun phrase at start"],
      "verb_indicators": ["action word", "state verb like 'is'", "auxiliary verbs"],
      "object_indicators": ["noun after verb", "pronoun after verb", "object noun phrase"]
    },
    "transformation_algorithm": {
      "step1": "Identify subject, verb, object positions",
      "step2": "Extract tense from auxiliary verbs",
      "step3": "Detect target language structure (usually SOV)",
      "step4": "Reorder words: subject → object → verb",
      "step5": "Apply verb conjugation for target language",
      "step6": "Apply gender/number agreement",
      "step7": "Convert prepositions to postpositions",
      "step8": "Reconstruct sentence with proper spacing"
    }
  },
  "confidence_scoring": {
    "dictionary_coverage": {
      "weight": 0.4,
      "description": "Percentage of words found in dictionary",
      "formula": "(known_words / total_words) * 100"
    },
    "grammar_match": {
      "weight": 0.4,
      "description": "How well grammar rules applied",
      "factors": ["SVO/SOV conversion", "tense detection", "verb conjugation", "gender agreement"]
    },
    "data_source_reliability": {
      "weight": 0.2,
      "description": "Based on source of word mapping",
      "corpus_score": 0.95,
      "dictionary_score": 0.85,
      "inferred_score": 0.65
    },
    "final_confidence": "sum(dictionary_coverage * 0.4, grammar_match * 0.4, source_reliability * 0.2)"
  }
}
